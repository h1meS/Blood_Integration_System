@using BIS.ViewModels.VM
@model BloodGroupVm
@{
    ViewData["Title"] = "Blood Group Details";
}
<h2>@ViewData["Title"]</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
</div>
<hr>
<h3>Donors: </h3>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>First Name </label>
            </th>
            <th>
                <label>Last Name</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model.Donors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => donor.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => donor.LastName)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("Edit", "AddOrEditBloodGroup", new { id = Model.Id }) |
    <button type="submit" class="btn btn-primary"><a class="text-dark" asp-action="Index">Back to List</a></button>
</div>